<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xxx.dao.SmiShopInfoMapper">
	<resultMap id="BaseResultMap" type="SmiShopInfo">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="shop_no" property="shopNo" jdbcType="VARCHAR" />
		<result column="shop_name" property="shopName" jdbcType="VARCHAR" />
		<result column="shop_type" property="shopType" jdbcType="VARCHAR" />
		<result column="shop_password" property="shopPassword"
			jdbcType="VARCHAR" />
		<result column="note" property="note" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, shop_no, shop_name, shop_type, shop_password, note
	</sql>

	<!-- 根据门店编码和密码获取门店信息 -->
	<select id="getByNoAndPwd" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from smi_shop_info
		where shop_no = #{shopNo,jdbcType=VARCHAR} and
		shop_password = #{password,jdbcType=VARCHAR}
	</select>
	<!-- 根据ID门店信息 -->
	<select id="getById" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from smi_shop_info
		where id = #{id};
	</select>
	<!-- 插入数据库表数据 -->
	<insert id="addShop" parameterType="String">
		insert into smi_shop_info
		set
		shop_no=#{shopNo,jdbcType=VARCHAR},shop_name=#{shopName,jdbcType=VARCHAR},shop_type=#{shopType,jdbcType=VARCHAR},shop_password=#{shopPassword,jdbcType=VARCHAR},note=#{note,jdbcType=VARCHAR};
		<!-- (shop_no,shop_name,shop_type,shop_password,note) value (#{shopNo},#{shopName},#{shopType},#{shopPassword},#{note}) -->
	</insert>
	<!-- 批量查询 -->
	<select id="selectAll" resultMap="BaseResultMap">
		select * from smi_shop_info;
	</select>
	<!-- 单个删除 -->
	<delete id="delShopById" parameterType="Integer">
		delete from smi_shop_info
		where id=#{id};
	</delete>
	<!-- 批量删除 -->
	<delete id="delShopByIds" parameterType="Integer">
		delete from smi_shop_info
		where id in
		<foreach item="item" index="index" collection="ids" open="("
			separator="," close=")">
			#{item}
		</foreach>
		;
	</delete>
	<update id="updateById" parameterType="SmiShopInfo">
		update smi_shop_info
		set shop_no=#{shopNo,jdbcType=VARCHAR},shop_name=#{shopName,jdbcType=VARCHAR},shop_type=#{shopType,jdbcType=VARCHAR},shop_password=#{shopPassword,jdbcType=VARCHAR},note=#{note,jdbcType=VARCHAR}
		where id = #{id};
	</update>
</mapper>
